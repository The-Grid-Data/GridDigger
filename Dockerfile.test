# GridDigger Telegram Bot - Testing Docker Configuration
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Set work directory
WORKDIR /app

# Install system dependencies including testing tools
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        gcc \
        default-libmysqlclient-dev \
        pkg-config \
        curl \
        git \
        && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements_stable.txt .
COPY requirements.txt .

# Install Python dependencies including testing packages
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements_stable.txt

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p logs coverage_reports

# Create non-root user for security
RUN adduser --disabled-password --gecos '' --uid 1000 testuser \
    && chown -R testuser:testuser /app
USER testuser

# Health check for testing environment
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Default command runs tests
CMD ["python", "-m", "pytest", "tests/", "-v"]